# Env

NODE_ENV='development'
CI='false'

LISTEN_IP='0.0.0.0'
LISTEN_PORT='3000'

REFLECT_ORIGIN='true'
BYPASS_AUTHORIZATIONS='true'

EXTENSION_URL='http://'
WEBSITE_URL='http://'

# Database

DB_HOST='localhost'
DB_PORT='5432'
DB_USER='root'
DB_PASS='root'
DB_NAME='db'
DB_SYNC='true'
DB_ENTITIES='src/**/*.entity.ts'
DB_MIGRATIONS_DIR='migrations/*.ts'
DB_DEBUG='true'

# Email

EMAIL_HOST='domain.tld'
EMAIL_USER='username'
EMAIL_PASSWORD='password'
EMAIL_BYPASS='true'
EMAIL_ACCOUNT_VERIFICATION='false'
EMAIL_ACCOUNT_AUTHORIZATION='false'

# Secret

SESSION_SECRET='secret'

# Paths

EMAIL_TEMPLATE_DIR='/path/to/email-templates'
USER_AVATAR_DESTINATION='/tmp/avatars'
