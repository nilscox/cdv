{
  "name": "reagir-information-api",
  "version": "0.3.0",
  "description": "Réagir à l'information - API",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=development nodemon",
    "start:debug": "NODE_ENV=development nodemon --config nodemon-debug.json",
    "start:prod": "yarn db:migrate && node dist/src/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json -e 'migrations/*'",
    "test": "NODE_ENV=test jest",
    "test:watch": "yarn test --watch",
    "test:cov": "yarn test --coverage",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:intg": "yarn test --config test/jest-intg.json --runInBand",
    "test:e2e": "yarn test --config ./test/jest-e2e.json --runInBand",
    "test:all": "yarn test:intg && yarn test:e2e",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "db:drop": "yarn typeorm schema:drop",
    "db:migrate": "yarn typeorm migration:run",
    "db:populate": "ts-node data.ts",
    "db:reset": "yarn db:drop && yarn db:migrate",
    "start:restoredb": "ep2cmd /reset \"yarn db:drop && yarn db:migrate\" /populate \"yarn db:populate\""
  },
  "dependencies": {
    "@nest-middlewares/cors": "^6.0.0",
    "@nest-middlewares/express-session": "^6.0.0",
    "@nest-middlewares/morgan": "^6.0.0",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/typeorm": "^6.1.1",
    "@types/node": "^10.12.18",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "dotenv": "^8.0.0",
    "emailjs": "^2.2.0",
    "express-session": "^1.16.1",
    "memorystore": "^1.6.1",
    "module-alias": "^2.2.0",
    "node-fetch": "^2.6.0",
    "pg": "^7.10.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.17",
    "typescript": "^3.2.4",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/supertest": "^2.0.7",
    "ep2cmd": "https://github.com/nilscox/ep2cmd.git",
    "express": "^4.17.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
