{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "strict": true,
    // "strictNullChecks": true,
    // "noImplicitAny": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "src": ["src"]
    }
  },
  "exclude": ["node_modules/*"],
  "include": ["src/**/*", "migrations/*", "seeds/*", "scripts/**/*"]
}
