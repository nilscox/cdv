    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.11",
    "tsc": "^1.20150623.0",
    "typescript": "^4.0.0",
    "watch": "^1.0.2",
    "webpack": "^5.6.0",
