    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
