{
  "name": "zetecom-e2e",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "wait:api": "yarn wait-on http://localhost:3000/api/healthcheck",
    "docker-compose": "docker-compose -f ../docker-compose.yml -f docker-compose.e2e.yml",
    "docker-compose:ci": "yarn docker-compose -f docker-compose.ci.yml",
    "docker-compose:local": "yarn docker-compose -f ../docker-compose.override.yml",
    "start": "yarn docker-compose:local up -d && yarn wait:api && yarn cypress open",
    "start:ci": "yarn wait:api && yarn cypress run && yarn nyc report --reporter=lcov"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.7.6",
    "cypress": "^4.11.0",
    "nyc": "^15.1.0",
    "typescript": "^4.1.3",
    "wait-on": "^5.0.0"
  }
}
