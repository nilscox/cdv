{
  "manifest_version": 2,
  "name": "Réagir à l'information",
  "version": "0.4.2",
  "permissions": [
      "background",
      "tabs"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background_script.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://youtube.com/watch*",
        "http://www.youtube.com/watch*",
        "https://youtube.com/watch*",
        "https://www.youtube.com/watch*"
      ],
      "js": ["assets/js/iframeResizer.min.js", "integrations/youtube.js"]
    },
    {
      "matches": ["https://www.lemonde.fr/*"],
      "js": ["assets/js/iframeResizer.min.js", "integrations/lemonde.js"]
    },
    {
      "matches": ["https://skeptikon.fr/videos/watch/*"],
      "js": ["assets/js/iframeResizer.min.js", "integrations/skeptikon.js"]
    }
  ]
}
