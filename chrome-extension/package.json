{
  "name": "cdv-chrome-extension",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2"
  },
  "scripts": {
    "start": "concurrently \"yarn build:popup:watch\" \"yarn build:integrations:watch\"",
    "build": "yarn build:popup && yarn build:integrations",
    "build:popup": "webpack",
    "build:popup:watch": "yarn build:popup --watch",
    "build:integrations": "webpack --config webpack.integrations.config",
    "build:integrations:watch": "yarn build:integrations --watch"
  }
}
