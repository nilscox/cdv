{
  "name": "cdv-chrome-extension",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.12",
    "@types/node": "12.0.0",
    "@types/react": "16.8.17",
    "@types/react-dom": "16.8.4",
    "@types/react-router-dom": "^4.3.3",
    "css-loader": "^2.1.1",
    "precommit": "^1.2.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.0",
    "typescript": "3.4.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2"
  },
  "scripts": {
    "start": "concurrently \"yarn build:popup:watch\" \"yarn build:integrations:watch\"",
    "build": "yarn build:popup && yarn build:integrations",
    "build:popup": "webpack",
    "build:popup:watch": "yarn build:popup --watch",
    "build:integrations": "webpack --config webpack.integrations.config",
    "build:integrations:watch": "yarn build:integrations --watch",
    "clean": "rm -rf public/assets/js/dist",
    "test": "exit 0",
    "lint": "eslint 'src/**/*.ts{,x}'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.13.0"
  },
  "precommit": [
    "yarn lint",
    "yarn test"
  ]
}
