{
  "name": "reagir-information-chrome-extension",
  "description": "Réagir à l'information - Chrome extension",
  "version": "0.4.1",
  "scripts": {
    "start": "concurrently \"yarn build:popup:watch\" \"yarn build:integrations:watch\" \"yarn build:bg-script:watch\"",
    "clean": "rm -rf extension/integrations extension/popup/popup.js extension/background_script.js reagir-information-chrome-extension.zip",
    "build": "yarn build:popup && yarn build:integrations && yarn build:bg-script",
    "build:popup": "webpack --config webpack/popup.config",
    "build:popup:watch": "yarn build:popup --watch",
    "build:integrations": "webpack --config webpack/integrations.config",
    "build:integrations:watch": "yarn build:integrations --watch",
    "build:bg-script": "cp src/background_script.js extension",
    "build:bg-script:watch": "watch \"yarn build:bg-script\" src",
    "zip": "(cd extension && zip -r ../reagir-information-chrome-extension.zip .)"
  },
  "dependencies": {
    "iframe-resizer": "^4.1.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "dotenv": "^8.0.0",
    "watch": "^1.0.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2"
  }
}
