{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./",
    "noEmit": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
