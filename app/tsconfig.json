{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist/",
    "baseUrl": ".",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    // "strictNullChecks": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src", "package.json"],
  "exclude": ["src/__mocks__"]
}
