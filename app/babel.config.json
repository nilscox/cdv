{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-typescript",
    "@babel/preset-react"
  ],
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    "@babel/plugin-proposal-class-properties"
  ],
  "env": {
    "test": {
      "plugins": [
        "@babel/plugin-transform-runtime"
      ]
    },
    "development": {
      "presets": [
        ["@babel/preset-react", { "development": true }]
      ],
      "plugins": [
        "react-refresh/babel"
      ]
    }
  }
}
