{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-typescript",
    "@babel/preset-react"
  ],
  "env": {
    "test": {
      "plugins": [
        "@babel/plugin-transform-runtime",
        "istanbul"
      ]
    },
    "development": {
      "presets": [
        ["@babel/preset-react", { "development": true }]
      ],
      "plugins": [
        "@babel/plugin-transform-runtime",
        "react-hot-loader/babel"
      ]
    }
  }
}
